    private void OKActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_OKActionPerformed
        String attpts = String.valueOf(attpoints);
        String midpts = String.valueOf(midpoints);
        String defpts = String.valueOf(defpoints);
        String colpts = String.valueOf(colpoints);
        String spdpts = String.valueOf(spdpoints);
        String teamname = teamsname.getText();
        t = myTCP.getTournament();
        new TCP_CLIENT(hostIPadress,port,"setTeamCara"+":"+nc+":"+attpts+":"+midpts+":"+defpts+":"+colpts+":"+spdpts).start();

        new TCP_CLIENT(hostIPadress,port,"validateCoach"+":"+nc).start();
        new CH_3_Lancerlacompetition(hostIPadress,port,myIPadress,myTCP);
        this.setVisible(false);

    }//GEN-LAST:event_OKActionPerformed

    private void OK1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_OK1ActionPerformed
        String coachname = Coachsfield.getText();
        if ("".equals(coachname) || "write here your coach's name".equals(coachname))
        {
            System.out.println("This JTextField is empty");
        }
        else{
            new TCP_CLIENT(hostIPadress,port,"setCoachName:"+myIPadress+":"+coachname).start();
            OK2.setEnabled(true);
            OK1.setEnabled(false);
            
        }

    }//GEN-LAST:event_OK1ActionPerformed

