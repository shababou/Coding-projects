
package liguapoulpe;
import java.io.Serializable;

/**
 * To calculate random values in different ways.
 */
public class Dice implements Serializable
{
  //////////////////////////////////////////////////////////////////////////////
  //////////////////////////////ATTRIBUTES//////////////////////////////////////
  //////////////////////////////////////////////////////////////////////////////
    int value; // value of the dice

  //////////////////////////////////////////////////////////////////////////////
  //////////////////////////////CONSTRUCTOR/////////////////////////////////////
  //////////////////////////////////////////////////////////////////////////////
    public Dice()
    {this.value = 0;}

  //////////////////////////////////////////////////////////////////////////////
  //////////////////////////////GETTERS/////////////////////////////////////////
  //////////////////////////////////////////////////////////////////////////////

    /** Returns the value of the dice **/
    public int getValue()
    {return value;}

  //////////////////////////////////////////////////////////////////////////////
  /////////////////////////METHODS TO ROLL THE DICE/////////////////////////////
  //////////////////////////////////////////////////////////////////////////////

    /** The value of the dice is between 1 and 6 **/
    public void roll6()
    {
        int jet = (int)(1+6*Math.random());
        this.value=jet;
    }

    /** The value of the dice is 6 or 7**/
     public void roll67()
    {
        int jet = (int)(6+2*Math.random());
        this.value=jet;
    }

     /** The value of the dice is between 6 and 8 **/
     public void roll678()
    {
        int jet = (int)(6+3*Math.random());
        this.value=jet;
    }

    

}
