package IHMParieur;


import java.awt.Rectangle;
import javax.swing.JButton;


/**
 * Cette classe contient des méthodes permettant de gérer le graphisme et les actions des boutons.
 */

public class Bouton extends JButton 
{
    private int x,y,l,L;



    public Bouton(int abscisse,int ordonnee, int longueur, int largeur)
    {
        this.x = abscisse ;
        this.y = ordonnee ;
        this.l = longueur ;
        this.L = largeur ;


        this.setBounds(new Rectangle(x,y,l,L));
        this.setOpaque(true);
        this.setEnabled(true);

        

    }

}


